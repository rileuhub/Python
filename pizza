
#create a list of pizza orders
pizzas = ['cheese', 'chicken', 'pepperoni', 'veggie']
#Create list to store how many of each pizza
quantities = []

#Go through thelist of pizza in order
for pizza in pizzas:
    #Ask how many of each pizza they want
    howmany = input(f'How many {pizza} do we want? ')
    quantities.append(howmany)

print(quantities)


